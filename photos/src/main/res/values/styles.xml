<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MediumTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SingleLineText">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ImageSearcherProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="hideAnimationBehavior">inward</item>
        <item name="showAnimationBehavior">outward</item>
    </style>
</resources>